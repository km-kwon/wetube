extends base.pug

block content  
    if(err)
        span #{err_message}
    form(method = "post")
        input(name = "title", placeholder = "title", required, type = "text", maxLength = "80")
        input(name = "description", placeholder = "description", required, type = "text", minLength = "3")
        input(name = "hashtags", placeholder = "hashtags nope comma", type = "text")
        input(type = "submit", value = "OK")
